@model Agromin.SAV.Entities.Entities.LoginEntity
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<!-- Mirrored from coderthemes.com/ubold/layouts/light/pages-login.html by HTTrack Website Copier/3.x [XR&CO'2014], Mon, 10 Dec 2018 15:19:14 GMT -->
<head>
    <meta charset="utf-8" />
    <title>SA - Soluciones Agromin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="A fully featured admin theme which can be used to build CRM, CMS, etc." name="description" />
    <meta content="Coderthemes" name="author" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="assets/images/favicon.ico">

    <!-- App css -->
    <link href="@Url.Content("~/Content/assets/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/assets/css/icons.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/assets/css/app.min.css")" rel="stylesheet" type="text/css" />
    <style>
        body.authentication-bg-pattern {
            background-image: url('@Url.Content("~/Content/assets/images/solucionesAgromin/Managment3.jpg")');
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            box-shadow: inset 0px 0px 2050px black;
            background-size: cover;
            display: block;
        }
    </style>
</head>

<body class="authentication-bg authentication-bg-pattern">

    <div class="account-pages mt-5 mb-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card bg-pattern">
                       
                        <div class="card-body p-4">
                            @Html.Alert(TempData)
                            <div class="text-center w-75 m-auto">
                                <h4 class="text-muted mb-4 mt-3">MANAGMENT SOLUCIONES AGROMIN</h4>
                            </div>

                            <form method="post">

                                <div class="form-group mb-3">
                                    @Html.LabelFor(x => x.Credential)
                                    @Html.TextBoxFor(x => x.Credential, new { @class = "form-control", @placeholder = "Usuario", @type = "text" })
                                    @*<input class="form-control" type="email" id="emailaddress" required="" placeholder="Enter your email">*@
                                </div>

                                <div class="form-group mb-3">
                                    @Html.LabelFor(x => x.Password)
                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Contraseña", @type = "password" })
                                    @*<input class="form-control" type="password" required="" id="password" placeholder="Enter your password">*@
                                </div>

                                <div class="form-group mb-0 text-center">
                                    <button class="btn btn-success btn-block" type="submit"> Ingresar </button>
                                </div>

                            </form>

                        </div> <!-- end card-body -->
                    </div>
                    <!-- end card -->
                    <!-- end row -->

                </div> <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end page -->


    <footer class="footer footer-alt">
        2019 &copy; Soluciones Agromin <a href="#" class="text-white-50">Sistema de ventas</a>
    </footer>

    <!-- Vendor js -->
    <script src="@Url.Content("~/Content/assets/js/vendor.min.js")"></script>

    <!-- App js -->
    <script src="@Url.Content("~/Content/assets/js/app.min.js")"></script>

</body>

