@model Agromin.SAV.Web.ViewModel.Brand.AddEditBrandViewModel

@{
    ViewBag.Title = Model.BrandId.HasValue ? "Editar Marca" : "Agregar Marca";
    ViewBag.ModalIcon = "fa fa-building";
    ViewBag.ModalSize = "md";
}


@Html.HiddenFor(x => x.BrandId)
<div class="col-lg-12">
    <div class="card">
        <div class="card-body ">
            <form class="needs-validation" novalidate method="post">

                <div class="col-md-12 mb-3">
                    <label for="" class=" col-form-label">@Html.LabelFor(x => x.Name)<span class="text-danger">*</span></label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Nombre" })
                    <div class="valid-tooltip">
                        Looks good!
                    </div>
                    <div class="invalid-tooltip">
                        Please enter first name.
                    </div>
                </div>
                <button class="btn btn-success btn-rounded" type="submit"><i class="fe-save"></i> Guardar</button>
            </form>
        </div>
    </div>
</div>





